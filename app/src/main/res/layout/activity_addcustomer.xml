<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addcustomer"
    android:orientation="vertical"
    android:background="#0652AD"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="50dp"
        android:elevation="50dp"
        app:cardCornerRadius="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <ImageView
                    android:onClick="back3"
                    tools:ignore="onClick"
                    android:contentDescription="back"
                    android:layout_width="150dp"
                    android:src="@drawable/back"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                app:cardCornerRadius="35dp"
                android:elevation="10dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="70dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/adduser" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginBottom="40sp"
                android:text="Add Customer"
                android:layout_height="wrap_content"/>



            <androidx.cardview.widget.CardView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:elevation="20dp"

                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customername"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="@color/cardview_shadow_start_color"
                            android:textColorHint="#808080"
                            android:inputType="textPersonName"
                            android:hint="Customer Name" />


                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customeremail"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="@color/cardview_shadow_start_color"
                            android:textColorHint="#808080"
                            android:inputType="textEmailAddress"
                            android:hint="Customer Email" />


                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customermobile"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="@color/cardview_shadow_start_color"
                            android:textColorHint="#808080"
                            android:inputType="phone"
                            android:hint="Customer Mobile" />


                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        app:helperTextTextColor="@color/black"
                        app:boxBackgroundColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customeraddress"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:background="@color/cardview_shadow_start_color"
                            android:textColorHint="#808080"
                            android:hint="Customer Address"
                            android:inputType="textPostalAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:backgroundTint="#036FC6"
                        android:textSize="15sp"
                        android:onClick="addnewcustomer"
                        android:elevation="10dp"
                        app:cardElevation="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:ignore="onClick"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Add"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:layout_height="wrap_content"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
